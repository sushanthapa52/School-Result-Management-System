@model ClassViewModel
@{
    ViewBag.Title = "Create Class";
}





<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Create Class</h3>
                </div>
                <div class="panel-body">
                    <form accept-charset="UTF-8" role="form" method="post">

                        <fieldset>
                            <div class="form-group">

                                <label asp-for="ClassName"></label>
                                <input asp-for="ClassName" class="form-control" placeholder="Class Name" />
                                <span asp-validation-for="ClassName" class="text-danger"></span>

                                <div asp-validation-summary="All" class="text-danger"> </div>
                                


                            </div>



                            <button type="submit" class="btn btn-lg btn-success btn-block">Create</button>

                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



